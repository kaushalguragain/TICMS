<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="1dip" android:color="#f48fb1" />
            <gradient android:angle="-90" android:startColor="#ed7ea3" android:endColor="#df509c"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="1dip" android:color="#f48fb1" />
            <solid android:color="#b35474"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="1dip" android:color="#f48fb1" />
            <gradient android:angle="-90" android:startColor="#ffa5c3" android:endColor="#ef437d" />
        </shape>
    </item>
</selector>