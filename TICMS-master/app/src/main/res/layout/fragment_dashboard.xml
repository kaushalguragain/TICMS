<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout_dashboard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e4789f"
    android:fitsSystemWindows="true"
    android:padding="25dp"
    tools:context="com.texasimaginology.ticms.Dashboard.DashboardFragment"
    tools:openDrawer="start">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <ImageView
                    android:id="@+id/users"
                    android:layout_width="133dp"
                    android:layout_height="155dp"
                    android:layout_weight="0.5"
                    android:src="@drawable/users" />

                <ImageView
                    android:id="@+id/students"
                    android:layout_width="133dp"
                    android:layout_height="155dp"
                    android:layout_weight="0.5"
                    android:src="@drawable/students" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/middle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/top"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <ImageView
                    android:id="@+id/teachers"
                    android:layout_width="133dp"
                    android:layout_height="155dp"
                    android:layout_weight="0.5"
                    android:src="@drawable/teachers" />

                <ImageView
                    android:id="@+id/subjects"
                    android:layout_width="133dp"
                    android:layout_height="155dp"
                    android:layout_weight="0.5"
                    android:src="@drawable/subjects" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/middle"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <ImageView
                    android:id="@+id/courses"
                    android:layout_width="133dp"
                    android:layout_height="155dp"
                    android:layout_weight="0.5"
                    android:src="@drawable/courses" />

                <ImageView
                    android:id="@+id/course"
                    android:layout_width="133dp"
                    android:layout_height="155dp"
                    android:layout_weight="0.5" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
